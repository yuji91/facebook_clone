<div class="container">
  <h2>ユーザー一覧</h2>
  <% @users.each do |user| %>
      <div class="container-child col-md-2 col-sm-4 col-xs-6">
        <%= link_to user_path(user) do %>
          <div class="container-child col-md-2 col-sm-2 col-xs-3 "><%= profile_img(user) %></div>
        <% end %>
      </div>
       <li>
         <div class="item">
           <%= link_to user.name, user %>
           <%= user.email %>
         </div>
         <div class="item">
           <% if user.id != current_user.id %>
             <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%>
             <%= render partial: 'follow_form', locals: { user: user } if signed_in?   %>
           <% else %>
              <p>あなたのアカウントです</p>
           <% end %>
         </div>
       </li>
       </br>
  <% end %>
</div>
